<%- include('partials/header') %>

<h2 class="mb-4">
  <i class="bi bi-plus-circle"></i> Nueva Asignatura
</h2>

<div class="card shadow-sm">
  <div class="card-body">
    <form action="/asignaturas/nueva" method="POST">
      <div class="mb-3">
        <label class="form-label">
          <i class="bi bi-hash"></i> Código de Asignatura
        </label>
        <input type="text" name="codigo" class="form-control" placeholder="Ej: MAT1, LEN2" required>
        <small class="form-text text-muted">Código único para identificar la asignatura</small>
      </div>
      
      <div class="mb-3">
        <label class="form-label">
          <i class="bi bi-journal-text"></i> Nombre
        </label>
        <input type="text" name="nombre" class="form-control" placeholder="Ej: Matemáticas I" required>
      </div>
      
      <div class="mb-3">
        <label class="form-label">
          <i class="bi bi-clock"></i> Horas Semanales
        </label>
        <input type="number" name="horas_semanales" class="form-control" min="1" max="40" placeholder="Ej: 4" required>
      </div>
      
      <div class="mb-3">
        <label class="form-label">
          <i class="bi bi-mortarboard"></i> Curso
        </label>
        <select name="curso_id" class="form-select" required>
          <option value="">Seleccione un curso...</option>
          <% cursos.forEach(c => { %>
            <option value="<%= c.id %>"><%= c.codigo %> - <%= c.nombre %></option>
          <% }) %>
        </select>
      </div>
      
      <div class="mb-3">
        <label class="form-label">
          <i class="bi bi-person-badge"></i> Profesor
        </label>
        <select name="profesor_id" class="form-select" required>
          <option value="">Seleccione un profesor...</option>
          <% profesores.forEach(p => { %>
            <option value="<%= p.id %>"><%= p.nombre_completo %></option>
          <% }) %>
        </select>
      </div>
      
      <div class="d-flex gap-2">
        <button type="submit" class="btn btn-success">
          <i class="bi bi-check-circle"></i> Guardar Asignatura
        </button>
        <a href="/asignaturas" class="btn btn-secondary">
          <i class="bi bi-x-circle"></i> Cancelar
        </a>
      </div>
    </form>
  </div>
</div>

<%- include('partials/footer') %>
