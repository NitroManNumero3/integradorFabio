<%- include('partials/header') %>

<h2 class="mb-4">
  <i class="bi bi-mortarboard"></i> Cursos
</h2>

<div class="table-responsive">
  <table class="table table-hover table-striped">
    <thead class="table-dark">
      <tr>
        <th>Código</th>
        <th>Nombre</th>
        <th>Tutor</th>
        <th>Nº Asignaturas</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% if (cursos.length === 0) { %>
        <tr>
          <td colspan="5" class="text-center text-muted">
            <i class="bi bi-inbox"></i> No hay cursos registrados
          </td>
        </tr>
      <% } else { %>
        <% cursos.forEach(c => { %>
          <tr>
            <td><strong><%= c.codigo %></strong></td>
            <td><%= c.nombre %></td>
            <td>
              <% if (c.tutor) { %>
                <span class="badge bg-success">
                  <i class="bi bi-person-check"></i> <%= c.tutor %>
                </span>
              <% } else { %>
                <span class="text-muted">Sin tutor</span>
              <% } %>
            </td>
            <td class="text-center"><%= c.num_asignaturas %></td>
            <td>
              <a href="/cursos/<%= c.id %>" class="btn btn-sm btn-info">
                <i class="bi bi-eye"></i> Ver
              </a>
            </td>
          </tr>
        <% }) %>
      <% } %>
    </tbody>
  </table>
</div>

<%- include('partials/footer') %>