<%- include('partials/header') %>

<h2 class="mb-4">
  <i class="bi bi-people"></i> Listado de Alumnos
</h2>

<div class="table-responsive">
  <table class="table table-hover table-striped">
    <thead class="table-dark">
      <tr>
        <th>Nombre Completo</th>
        <th>DNI</th>
        <th>Edad</th>
        <th>Teléfono</th>
        <th>Población</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% if (alumnos.length === 0) { %>
        <tr>
          <td colspan="6" class="text-center text-muted">
            <i class="bi bi-inbox"></i> No hay alumnos registrados
          </td>
        </tr>
      <% } else { %>
        <% alumnos.forEach(alumno => { %>
          <tr>
            <td>
              <strong><%= alumno.nombre %> <%= alumno.apellidos %></strong>
            </td>
            <td><%= alumno.dni %></td>
            <td><%= alumno.edad %> años</td>
            <td><%= alumno.telefono || 'N/A' %></td>
            <td><%= alumno.poblacion || 'N/A' %></td>
            <td>
              <div class="btn-group btn-group-sm" role="group">
                <a href="/alumnos/<%= alumno.alumno_id %>" class="btn btn-info" title="Ver detalle">
                  <i class="bi bi-eye"></i>
                </a>
                <a href="/alumnos/matricular/<%= alumno.alumno_id %>" class="btn btn-primary" title="Matricular">
                  <i class="bi bi-plus-circle"></i>
                </a>
              </div>
            </td>
          </tr>
        <% }) %>
      <% } %>
    </tbody>
  </table>
</div>

<%- include('partials/footer') %>
