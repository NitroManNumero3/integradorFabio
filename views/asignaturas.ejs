<%- include('partials/header') %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h2>
    <i class="bi bi-journal-text"></i> Asignaturas
  </h2>
  <a href="/asignaturas/nueva" class="btn btn-success">
    <i class="bi bi-plus-circle"></i> Nueva Asignatura
  </a>
</div>

<div class="table-responsive">
  <table class="table table-hover table-bordered">
    <thead class="table-dark">
      <tr>

        <th>CÃ³digo</th>
        <th>Nombre</th>
        <th>Horas/semana</th>
        <th>Curso</th>
        <th>Profesor</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% if (asignaturas.length === 0) { %>
        <tr>
          <td colspan="6" class="text-center text-muted">
            <i class="bi bi-inbox"></i> No hay asignaturas registradas
          </td>
        </tr>
      <% } else { %>
        <% asignaturas.forEach(a => { %>
          <tr>
            <td><strong><%= a.codigo %></strong></td>
            <td><%= a.nombre %></td>
            <td class="text-center"><%= a.horas_semanales %>h</td>
            <td><%= a.curso || 'Sin curso' %></td>
            <td><%= a.profesor || 'Sin asignar' %></td>
            <td>
              <a href="/asignaturas/<%= a.id %>" class="btn btn-sm btn-info">
                <i class="bi bi-eye"></i> Ver
              </a>
            </td>
          </tr>
        <% }) %>
      <% } %>
    </tbody>
  </table>
</div>


<%- include('partials/footer') %>
