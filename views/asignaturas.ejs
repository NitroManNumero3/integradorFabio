<%- include('partials/header') %>

<h2 class="mb-4">Asignaturas</h2>

<a href="/asignaturas/nueva" class="btn btn-success mb-3">âž• Nueva asignatura</a>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Horas/semana</th>
      <th>Curso</th>
      <th>Profesor</th>
    </tr>
  </thead>
  <tbody>
    <% asignaturas.forEach(a => { %>
      <tr>
        <td><%= a.nombre %></td>
        <td><%= a.horas_semana %></td>
        <td><%= a.curso || 'Sin curso' %></td>
        <td><%= a.profesor || 'Sin asignar' %></td>
      </tr>
    <% }) %>
  </tbody>
  
</table>

<%- include('partials/footer') %>
